.container{
  background-repeat: no-repeat;
background-size: 100% 100%;
-moz-background-size: 100% 100%;
}
.texts{
  font-size:90px;
  color: rgba(25, 117, 160, 0.692);
  font-style:oblique;
  top:45%;
position:fixed;
display:flex;
left:155px;

}
.buttons{
  color:#000000;
  background-color:chartreuse;
}
.userinfo {
  flex-direction: column;
  align-items: center;
  margin: 10px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;

}

.userinfo-nickname {
  color: #aaa;
}
.userinfo-nickname2 {
  color: #000000;
  text-align: center;
  font-size:30px;
}

.usermotto {
  margin: 120px;
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 5px;
}
.user-motto{
  font-size: 32rpx;
  font-family: MicroSoft Yahei;
  font-weight: bold;
  line-height: 80rpx;
}

page{
  height: 100%;
  background: #b3d4db;
}
.loadshare{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 0px;
  width: 40px;
  height: 60px;
  top: 56%;
}
.share-img{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 0px;
  width: 40px;
  height: 60px;
  top: 70%;
}
image{
  width: 40px;
  height: 60px;
  border-radius:20px;
}

.share-img-button{
  border: none;
  background: none;
}
.share-img-button::after{
  border: none
}

.share-img-button{
  position: absolute;
  right: 0px;
  width: 40px;
  height: 60px;
  top: 70%;
  background: none;
  border: none;
}